<resources>

    <style name="BtnComponentStyle" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="EditStylePink" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/pink_100</item>
        <item name="colorControlActivated">@color/pink_100</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextCustom" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/selector_hint_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInputLayoutEdit" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/pink_200</item>
        <item name="boxStrokeColor">@color/selector_edit_box</item>
        <item name="hintTextAppearance">@style/HintTextCustom</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="errorIconTint">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_8</item>
        <item name="android:textColorHint">@color/pink_100</item>
        <item name="colorControlNormal">@color/pink_200</item>
    </style>


    <style name="BottomNavigationView.RowAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pink_200</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="NavigationView">
        <item name="fontFamily">@font/flexo_bold</item>
    </style>

    <style name="Flexo" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/flexo_bold</item>
        <item name="android:textColor">@color/pink_200</item>
    </style>

    <style name="Custom.Collapsing" parent="Flexo">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/flexo_bold</item>
    </style>

    <style name="Custom.CollapsingExpand" parent="Flexo">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/flexo_bold</item>
    </style>

    <style name="Custom.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/pink_200</item>
        <item name="tabIndicator">@drawable/inline_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/pink_200</item>
        <item name="tabTextAppearance">@style/StyleTab</item>
        <item name="tabTextColor">@color/pink_100</item>
    </style>

    <style name="StyleTab" parent="Flexo">
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/flexo_bold</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/pink_100</item>
        <item name="colorControlActivated">@color/pink_200</item>
    </style>


    <style name="Generic.AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded</item>
    </style>

    <style name="Generic.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Generic.AppModalStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="colorPrimary">@color/transparency_white</item>
        <item name="colorPrimaryDark">@color/transparency_white</item>
        <item name="colorAccent">@color/transparency_white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparency_white</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="Generic.AppCompatRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/flexo_bold</item>
        <item name="android:textColor">@color/pink_200</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:drawableRight">@drawable/ui_kit_selector_radio</item>
        <item name="android:button">@null</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>
