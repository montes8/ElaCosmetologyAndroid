<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressButton">
        <attr name="buttonIconLeft" format="reference" />
        <attr name="buttonIconRight" format="reference" />
        <attr name="buttonText" format="string" />
        <attr name="buttonDrawablePadding" format="dimension" />
        <attr name="isButtonEnabled" format="boolean" />
        <attr name="isButtonVisible" format="boolean" />
        <attr name="isButtonLoading" format="boolean" />
        <attr name="buttonUIStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="subtle" value="2" />
            <enum name="text" value="3" />
        </attr>
        <attr name="buttonUISize" format="enum">
            <enum name="large" value="0" />
            <enum name="medium" value="1" />
            <enum name="small" value="2" />
            <enum name="normal" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EditCustomLayout">
        <attr name="uiDrawableEndEnabled" format="boolean" />
        <attr name="uiPasswordEnabled" format="boolean" />
        <attr name="uiContentDescription" format="string" />
        <attr name="uiIconPassword" format="reference" />
        <attr name="uiIconDrawableEnd" format="reference" />
        <attr name="uiEditMaxLength" format="integer" />
        <attr name="uiErrorEnabled" format="boolean" />
        <attr name="uiFocusable" format="boolean" />
        <attr name="uiTypeHint" format="boolean" />
        <attr name="uiEnabled" format="boolean" />
        <attr name="uiText" format="string" />
        <attr name="uiHint" format="string" />
        <attr name="uiIconTint" format="color" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="isClearable" format="boolean" />
    </declare-styleable>
</resources>