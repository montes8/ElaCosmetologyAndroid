<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerOneBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_24"
        app:cardElevation="@dimen/size_8"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/shimmer_background_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shimmerOneBanner"
        app:layout_constraintStart_toStartOf="@+id/shimmerOneBanner"
        app:layout_constraintTop_toBottomOf="@+id/shimmerOneBanner" />

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerTwoBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_24"
        app:cardElevation="@dimen/size_8"
        app:layout_constraintStart_toEndOf="@+id/shimmerOneBanner"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/shimmer_background_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shimmerTwoBanner"
        app:layout_constraintStart_toStartOf="@+id/shimmerTwoBanner"
        app:layout_constraintTop_toBottomOf="@+id/shimmerTwoBanner" />

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmerThreeBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/size_8"
        app:cardCornerRadius="@dimen/size_24"
        app:cardElevation="@dimen/size_8"
        app:layout_constraintStart_toEndOf="@+id/shimmerTwoBanner"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/size_120"
                android:layout_height="@dimen/size_120"
                android:background="@drawable/shimmer_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/shimmer_background_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shimmerThreeBanner"
        app:layout_constraintStart_toStartOf="@+id/shimmerThreeBanner"
        app:layout_constraintTop_toBottomOf="@+id/shimmerThreeBanner" />
</androidx.constraintlayout.widget.ConstraintLayout>