<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pink_50"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <include
        android:id="@+id/toolBarHome"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/mold_toolbar"/>

    <FrameLayout
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        app:layout_constraintTop_toBottomOf="@+id/toolBarHome"
        app:layout_constraintBottom_toTopOf="@id/btnNavigation"
        tools:ignore="UselessLeaf" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:background="@color/transparency_white"
        android:elevation="0dp"
        app:elevation="0dp"
        android:alpha="0.5"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconSize="@dimen/size_22"
        app:itemIconTint="@color/selector_item_menu"
        app:itemTextAppearanceActive="@style/BottomNavigationView.RowAppearance"
        app:itemTextAppearanceInactive="@style/BottomNavigationView.RowAppearance"
        app:itemTextColor="@color/selector_item_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>