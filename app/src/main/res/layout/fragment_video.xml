<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_bg_general"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/nsvVideoAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/size_0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/size_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/size_0">

                <TextView
                    android:id="@+id/txtTitleVideoAdmin"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_25"
                    android:lineSpacingExtra="@dimen/size_5"
                    android:textColor="@color/pink_200"
                    android:text="@string/text_title_video_admin"
                    android:layout_height="wrap_content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ctlVideoTest"
                    android:layout_marginTop="@dimen/size_20"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleVideoAdmin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content">

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeVideoTest"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="@dimen/size_152"
                        android:layout_marginEnd="@dimen/size_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/editIdVideo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:showFullScreenButton="false"
                        app:autoPlay="false"
                        app:useWebUi="true"
                        app:showYouTubeButton="false" />

                    <com.example.elacosmetologyandroid.component.button.ProgressButton
                        android:id="@+id/btnTestVideo"
                        android:layout_width="@dimen/size_166"
                        android:layout_height="wrap_content"
                        app:buttonText="Probar ID"
                        app:buttonUISize="small"
                        app:buttonUIStyle="primary"
                        app:layout_constraintBottom_toTopOf="@+id/editIdVideo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/youtubeVideoTest" />

                    <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                        android:id="@+id/editIdVideo"
                        style="@style/TextInputLayoutEdit"
                        android:layout_width="@dimen/size_166"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnTestVideo"
                        app:uiHint="Id de video" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editAuthorVideo"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TextInputLayoutEdit"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="@dimen/size_20"
                    app:uiHint="Autor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ctlVideoTest"
                    android:layout_height="wrap_content"/>

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editNameVideo"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TextInputLayoutEdit"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="@dimen/size_20"
                    app:uiHint="Nombre del video"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAuthorVideo"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtDescriptionVideo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_24"
                    android:text="@string/text_title_description"
                    android:textColor="@color/pink_200"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editNameVideo"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editDescriptionVideo"
                    android:layout_width="match_parent"
                    android:padding="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_16"
                    android:lines="4"
                    android:hint="@string/text_hint_description"
                    android:gravity="top"
                    android:textColor="@color/pink_200"
                    android:textSize="@dimen/txt_size_16"
                    android:textColorHint="@color/pink_100"
                    android:background="@drawable/bg_corner_pink_round"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescriptionVideo"
                    android:layout_height="wrap_content"/>

                <com.example.elacosmetologyandroid.component.button.ProgressButton
                    android:id="@+id/btnSaveVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/size_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:buttonUISize="medium"
                    app:buttonUIStyle="primary"
                    app:buttonText="@string/txt_save"
                    app:isButtonEnabled="false"
                    android:layout_marginBottom="@dimen/size_40"
                    app:layout_constraintTop_toBottomOf="@+id/editDescriptionVideo"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>