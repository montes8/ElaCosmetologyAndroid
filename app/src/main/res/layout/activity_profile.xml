<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.profile.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:padding="@dimen/size_0"
        android:layout_margin="@dimen/size_0"
        app:elevation="@dimen/size_0"
        android:outlineProvider="none">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collToolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_250"
            android:outlineProvider="bounds"
            android:padding="@dimen/size_0"
            android:layout_margin="@dimen/size_0"
            app:title="@string/text_test"
            app:expandedTitleMarginStart="@dimen/size_16"
            app:collapsedTitleGravity="start"
            app:expandedTitleGravity="left|bottom"
            app:expandedTitleMarginTop="@dimen/size_48"
            app:collapsedTitleTextAppearance="@style/Custom.Collapsing"
            app:expandedTitleTextAppearance="@style/Custom.CollapsingExpand"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:maxLines="3">

            <ImageView
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:layout_height="match_parent"
                android:src="@drawable/ic_bg_general" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:padding="@dimen/size_0"
                app:navigationIcon="@drawable/ic_arrow_star"
                app:titleMarginStart="@dimen/size_16"
                app:contentInsetStartWithNavigation="0dp"
                app:contentInsetStart="@dimen/size_0"
                app:contentInsetLeft="@dimen/size_0"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cImgProfile"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_profile_place_holder"
        app:civ_border_color="@color/pink_100"
        app:civ_border_width="1dp"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>