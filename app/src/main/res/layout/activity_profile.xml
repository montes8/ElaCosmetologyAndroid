<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.elacosmetologyandroid.model.User" />

      </data>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/collapsingToolbarLayout"
    tools:context=".ui.profile.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_0"
        android:layout_margin="@dimen/size_0"
        app:elevation="@dimen/size_0"
        android:outlineProvider="none">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collToolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_250"
            android:outlineProvider="bounds"
            android:padding="@dimen/size_0"
            android:layout_margin="@dimen/size_0"
            app:title="@string/text_test"
            android:background="@color/white"
            app:expandedTitleMarginStart="@dimen/size_16"
            app:collapsedTitleGravity="left"
            android:layout_gravity="start"
            app:expandedTitleGravity="left|bottom"
            app:expandedTitleMarginTop="@dimen/size_48"
            app:collapsedTitleTextAppearance="@style/Custom.Collapsing"
            app:expandedTitleTextAppearance="@style/Custom.CollapsingExpand"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:maxLines="3">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgImageBanner"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/shape_place_holder"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="match_parent" />
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avLoadingBanner"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    app:indicatorName="BallPulseIndicator"
                    app:indicatorColor="@color/pink_200"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:padding="@dimen/size_0"
                android:layout_marginTop="@dimen/size_20"
                app:navigationIcon="@drawable/ic_arrow_star"
                app:titleMarginStart="@dimen/size_16"
                app:contentInsetStartWithNavigation="0dp"
                app:contentInsetStart="@dimen/size_0"
                app:contentInsetLeft="@dimen/size_0"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_profile_place_holder"
        app:civ_border_color="@color/pink_100"
        app:civ_border_width="1dp"
        android:elevation="@dimen/size_1"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|right" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avLoadingProfile"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/fab_margin"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/imgProfile"
        android:elevation="@dimen/size_2"
        app:layout_anchorGravity="center"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        app:indicatorColor="@color/pink_200"
        />

    <ImageButton
        android:id="@+id/imgBannerProfile"
        android:layout_width="wrap_content"
        android:contentDescription="@null"
        app:layout_anchor="@id/appBarLayout"
        android:elevation="@dimen/size_1"
        android:background="@color/transparent"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginTop="@dimen/size_40"
        android:tint="@color/pink_200"
        app:layout_anchorGravity="top|right"
        android:src="@drawable/ic_camera_banner"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/ic_bg_general" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                android:paddingBottom="@dimen/size_40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtTitleDataUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_40"
                    android:fontFamily="@font/flexo_bold"
                    android:text="@string/text_title_dat_user_profile"
                    android:textColor="@color/pink_200"
                    android:textSize="@dimen/txt_size_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/imgEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_edit"
                    android:layout_marginStart="@dimen/size_16"
                    app:layout_constraintStart_toEndOf="@+id/txtTitleDataUser"
                    app:layout_constraintBottom_toBottomOf="@+id/txtTitleDataUser"
                    app:layout_constraintTop_toTopOf="@+id/txtTitleDataUser" />



                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editNameProfile"
                    style="@style/TextInputLayoutEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_24"
                    app:uiHint="@string/text_name"
                    app:uiFocusable="false"
                    app:uiText="@{user.name}"
                    app:uiCursorVisibility="false"
                    android:imeOptions="actionNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleDataUser" />

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    style="@style/TextInputLayoutEdit"
                    android:id="@+id/editLastNameProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:uiHint="@string/text_last_name"
                    android:layout_marginTop="@dimen/size_16"
                    android:imeOptions="actionNext"
                    app:uiFocusable="false"
                    app:uiText="@{user.lastName}"
                    app:uiCursorVisibility="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editNameProfile" />

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    style="@style/TextInputLayoutEdit"
                    android:id="@+id/editEmailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    app:uiHint="@string/text_email"
                    android:imeOptions="actionNext"
                    app:uiFocusable="false"
                    app:uiText="@{user.email}"
                    app:uiCursorVisibility="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editLastNameProfile" />

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    style="@style/TextInputLayoutEdit"
                    android:id="@+id/editPhoneProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    app:uiHint="@string/text_phone"
                    app:uiText="@{user.phone}"
                    app:uiEditMaxLength="8"
                    android:imeOptions="actionNext"
                    app:uiFocusable="false"
                    app:uiCursorVisibility="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editEmailProfile" />

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    style="@style/TextInputLayoutEdit"
                    android:id="@+id/editAddressProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    app:uiHint="@string/text_address"
                    app:uiText="@{user.address}"
                    app:uiFocusable="false"
                    app:uiDrawableEndEnabled="true"
                    app:uiCursorVisibility="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editPhoneProfile" />

                <TextView
                    android:id="@+id/txtDeactivateUser"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/txt_deactivate_user"
                    android:gravity="center"
                    android:textColor="@color/pink_200"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editAddressProfile"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtDeleteUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_delete_user"
                    android:gravity="center"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone"
                    android:textColor="@color/pink_200"
                    android:layout_marginTop="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDeactivateUser"/>

                <com.example.elacosmetologyandroid.component.button.ProgressButton
                    android:layout_width="match_parent"
                    android:id="@+id/btnSaveProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/size_32"
                    app:buttonUISize="medium"
                    app:isButtonVisible="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:buttonText="@string/txt_save"
                    app:layout_constraintTop_toBottomOf="@+id/txtDeleteUser"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/snackBarActivateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>