<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="uiChecked"
            type="Boolean" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/contentOptionRadioList"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRowTitle"
                android:textSize="@dimen/txt_size_16"
                android:fontFamily="@font/flexo_medium_italic"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_64"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/size_16"
                android:text="@{title}"
                android:textColor="@color/pink_100"
                app:layout_constraintEnd_toStartOf="@id/rbOption"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Elige la placa" />

            <RadioButton
                android:id="@+id/rbOption"
                android:layout_width="@dimen/size_32"
                android:layout_height="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_16"
                android:clickable="false"
                android:checked="@{uiChecked?true:false}"
                style="@style/Generic.AppCompatRadioButton"
                app:layout_constraintBottom_toBottomOf="@id/txtRowTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtRowTitle" />

            <View
                android:id="@+id/bottom_sheet_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                android:background="@color/pink_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>