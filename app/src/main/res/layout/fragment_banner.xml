<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.elacosmetologyandroid.ui.admin.ParametersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_bg_general"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/nsvBanner"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/size_0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/size_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/size_0">

                <TextView
                    android:id="@+id/txtTitleBanner"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_25"
                    android:lineSpacingExtra="@dimen/size_5"
                    android:textColor="@color/pink_200"
                    android:text="@string/text_title_banner_admin"
                    android:layout_height="wrap_content"/>

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editTitleBanner"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TextInputLayoutEdit"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="@dimen/size_48"
                    app:uiHint="@string/text_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitleBanner"
                    android:layout_height="wrap_content"/>


                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editCategoryBanner"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TextInputLayoutEdit"
                    android:imeOptions="actionNext"
                    app:uiFocusable="true"
                    android:layout_marginTop="@dimen/size_24"
                    app:uiDrawableEndEnabled="true"
                    app:uiHint="@string/txt_menu_category"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTitleBanner"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/pbCategory"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/size_10"
                    app:layout_constraintBottom_toBottomOf="@+id/editCategoryBanner"
                    app:layout_constraintEnd_toEndOf="@+id/editCategoryBanner"
                    app:layout_constraintTop_toTopOf="@+id/editCategoryBanner" />

                <com.example.elacosmetologyandroid.component.edit.EditCustomLayout
                    android:id="@+id/editProductBanner"
                    android:layout_width="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TextInputLayoutEdit"
                    android:imeOptions="actionNext"
                    app:uiFocusable="true"
                    app:uiEnabled="false"
                    android:layout_marginTop="@dimen/size_24"
                    app:uiHint="@string/txt_menu_product"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editCategoryBanner"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/pbProduct"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginEnd="@dimen/size_10"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/editProductBanner"
                    app:layout_constraintEnd_toEndOf="@+id/editProductBanner"
                    app:layout_constraintTop_toTopOf="@+id/editProductBanner" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ctlImage"
                    app:layout_constraintTop_toBottomOf="@+id/editProductBanner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/size_24"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgBannerTest"
                        android:layout_width="@dimen/size_170"
                        android:layout_height="@dimen/size_170"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:background="@drawable/shape_place_holder"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.example.elacosmetologyandroid.component.button.ProgressButton
                        android:id="@+id/btnAddImgBannerAdmin"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        app:buttonText="+ Imagen"
                        app:buttonUISize="small"
                        app:buttonUIStyle="primary"
                        app:layout_constraintBottom_toTopOf="@+id/textView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgBannerTest"
                        app:layout_constraintTop_toTopOf="@+id/imgBannerTest" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="@dimen/size_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_24"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/flexo_bold_italic"
                        android:text="@string/text_message_test_add_img_banner"
                        android:textColor="@color/pink_200"
                        android:textSize="@dimen/txt_size_16"
                        app:layout_constraintBottom_toBottomOf="@+id/imgBannerTest"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgBannerTest"
                        app:layout_constraintTop_toBottomOf="@+id/btnAddImgBannerAdmin"
                        tools:targetApi="o" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtDescriptionBanner"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_24"
                    android:text="@string/text_title_description"
                    android:textColor="@color/pink_200"
                    android:fontFamily="@font/flexo_bold_italic"
                    android:textSize="@dimen/txt_size_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ctlImage"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editDescriptionBanner"
                    android:layout_width="match_parent"
                    android:padding="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_16"
                    android:lines="8"
                    android:hint="@string/text_hint_description"
                    android:gravity="top"
                    android:textColor="@color/pink_200"
                    android:textSize="@dimen/txt_size_16"
                    android:inputType="textCapSentences"
                    android:textColorHint="@color/pink_100"
                    android:background="@drawable/bg_corner_pink_round"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescriptionBanner"
                    android:layout_height="wrap_content"/>

                <com.example.elacosmetologyandroid.component.button.ProgressButton
                    android:id="@+id/btnSaveBannerAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/size_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:buttonUISize="medium"
                    app:buttonUIStyle="primary"
                    app:buttonText="@string/txt_save"
                    app:isButtonEnabled="false"
                    android:layout_marginBottom="@dimen/size_40"
                    app:layout_constraintTop_toBottomOf="@+id/editDescriptionBanner"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            tools:visibility="gone">
            <include layout="@layout/shimmer_admin_param" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>