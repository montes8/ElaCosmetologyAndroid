<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/contentOptionRadioList"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTitleOptionGeneric"
               android:textSize="@dimen/txt_size_16"
                android:fontFamily="@font/flexo_bold"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_64"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_16"
                android:paddingEnd="@dimen/size_0"
                android:textColor="@color/pink_200"
                app:layout_constraintEnd_toStartOf="@id/ImgTitleOptionClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Elige la placa" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ImgTitleOptionClose"
                android:layout_width="@dimen/size_32"
                android:layout_height="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_16"
                android:background="@null"
                android:contentDescription="@null"
                android:padding="@dimen/size_8"
                android:src="@drawable/ic_close"
                android:tint="@color/pink_200"
                app:layout_constraintBottom_toBottomOf="@id/txtTitleOptionGeneric"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtTitleOptionGeneric" />

            <View
                android:id="@+id/bottom_sheet_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pink_50"
                app:layout_constraintTop_toBottomOf="@id/txtTitleOptionGeneric" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListOptionGeneric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottom_sheet_divider"
                tools:itemCount="4"
                tools:listitem="@layout/row_generic_dialog_options" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>